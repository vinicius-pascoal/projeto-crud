<!DOCTYPE html>
<html lang="pt-br">
  <%- include('partials/head.ejs') %>
  <body>
    <h1><%= title %></h1>
    <%- include('partials/navbar.ejs') %>
    <% if (typeof menssage!=='undefined'){%> 
        <%= menssage %> 
      <% } %>

    <form action="/edit/<%= user._id %>" method="post">
      <div>
        <label>Nome</label>
        <input type="text" name="name" placeholder="Digite seu nome" value="<%= user.name %>"/>
      </div>
      <div>
        <label>Idade</label>
        <input type="text" name="age" placeholder="Digite sua Idade" value="<%= user.age %>"/>
      </div>
      <div>
        <label>E-mail</label>
        <input type="text" name="email" placeholder="Digite seu E-mail" value="<%= user.email %>"/>
      </div>
      <button type="submit">Editar</button>
    </form>
    <%- include('partials/foot.ejs') %>
  </body>
</html>
